
generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Modelo de Tarefa
model Task {
  id Int @id @default(autoincrement())
  titulo    String
  descricao String?
  concluida Boolean  @default(false)
  criada_em DateTime @default(now())

  @@map("tasks") // nome que a tabela ter√°
}
